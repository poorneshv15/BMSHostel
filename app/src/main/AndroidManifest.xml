<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psps.projects.bmshostel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".WardenHomeActivity"
            android:theme="@style/MyThemeDayNightNoActionBar" />
        <activity
            android:name=".Signup_ResetpassActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".StudentSignUpActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity android:name=".StudentHomeActivity">
        </activity>
        <activity
            android:name=".AddHosteliteActivity"
            android:label="@string/title_activity_add_hostelite"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HosteliteSignupActivity" />
        <activity android:name=".WardenProfileActivity"/>
    </application>

</manifest>