<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bms_hostel_1"
            android:contentDescription="@string/hostel" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/t"
            android:contentDescription="@string/black_shade"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/bms_logo"
                android:contentDescription="@string/logo"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailEt"
                android:hint="@string/username_hint"
                android:textColor="@color/white1"
                android:textColorHint="@color/white2"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_mail_white_24dp"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:background="@drawable/edittext_underline"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwordEt"
                android:hint="@string/password_hint"
                android:textColorHint="@color/white2"
                android:textColor="@color/white1"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:inputType="textPassword"
                android:background="@drawable/edittext_underline"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forgotPassTv"
                android:text="@string/forgot_password"
                android:gravity="end"
                android:textColor="@color/white1"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signInBtn"
                android:background="@drawable/rounded"
                android:text="@string/sign_in"
                android:textColor="@color/white1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded2"
                android:id="@+id/googleSignInBtn"
                android:text="@string/google_login"
                android:textColor="@color/white1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createAccTv"
                    android:text="@string/no_account"
                    android:textColor="@color/white1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        </LinearLayout>
</FrameLayout>
