<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addStudentRoot"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@color/bg_color"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/slNoTv" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sEmailEt"
        android:hint="@string/username_hint"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/slNoTv" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expandBtn"
        android:padding="@dimen/activity_horizontal_margin"
        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/sRoomNoEt" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sRoomNoEt"
        android:hint="@string/roomNoInput"
        android:inputType="number"
        android:drawableStart="@drawable/ic_hostel_room"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@+id/slNoTv"
        android:layout_toStartOf="@id/expandBtn"
        android:layout_toEndOf="@+id/slNoTv" />

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="500"
        app:el_expanded="false"
        app:el_parallax="1"
        android:layout_below="@id/sRoomNoEt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sUsnEt"
                android:hint="@string/usn"
                android:inputType="number"
                android:drawableStart="@drawable/ic_hostel_room"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sMobileEt"
                android:hint="@string/sMobileInput"
                android:inputType="number"
                android:drawableStart="@drawable/ic_mobile"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/fNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fNameInput"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableStart="@drawable/ic_guardian2"
                android:textSize="@dimen/student_profile_textSize" />
            <EditText
                android:id="@+id/fMobileEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fMobileInput"
                android:textIsSelectable="true"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableStart="@drawable/ic_mobile"
                android:textSize="@dimen/student_profile_textSize" />

            <EditText
                android:id="@+id/fAddressEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableStart="@drawable/ic_address2"
                android:hint="@string/sAddressInput"
                android:textSize="@dimen/student_profile_textSize" />
            <EditText
                android:id="@+id/gNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gNameInput"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableStart="@drawable/ic_guardian2"
                android:textSize="@dimen/student_profile_textSize" />
            <EditText
                android:id="@+id/gMobileEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gMobileInput"
                android:textIsSelectable="true"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableStart="@drawable/ic_mobile"
                android:textSize="@dimen/student_profile_textSize" />

            <EditText
                android:id="@+id/gAddressEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableStart="@drawable/ic_address2"
                android:hint="@string/sAddressInput"
                android:textSize="@dimen/student_profile_textSize" />
        </LinearLayout>

    </net.cachapa.expandablelayout.ExpandableLayout>



</RelativeLayout>