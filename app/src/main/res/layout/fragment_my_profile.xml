<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.psps.projects.bmshostel.MyProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/userProfileIv"
        android:layout_width="@dimen/profilePic"
        android:layout_height="@dimen/profilePic"
        android:layout_gravity="center_horizontal"
        android:src="@color/bg_color"
        android:contentDescription="Profile Pic"/>

    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editTextHeight2"
        android:gravity="center"
        android:text="Student"
        android:textSize="@dimen/student_profile_textSize"
        android:labelFor="@id/userProfileIv"
        />
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_padding"
        android:layout_marginRight="@dimen/card_padding"
        android:layout_marginLeft="@dimen/card_padding"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/sRoomNoTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHeight3"
                android:layout_marginTop="10dp"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:textSize="@dimen/student_profile_textSize"
                android:text="meshashi00@gmail.com"/>
            <TextView
                android:id="@+id/sUsn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHeight3"
                android:layout_below="@id/sRoomNoTv"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableStart="@drawable/ic_student_usn"
                android:textSize="@dimen/student_profile_textSize"
                android:text="1BM14CS083"/>
            <TextView
                android:id="@+id/sMobileTv"
                android:layout_width="match_parent"
                android:layout_below="@id/sUsn"
                android:layout_height="@dimen/editTextHeight3"
                android:layout_marginTop="10dp"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableStart="@drawable/ic_mobile"
                android:textSize="@dimen/student_profile_textSize"
                android:text="7026210672"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Sign out"/>

</LinearLayout>
